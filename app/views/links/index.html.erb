<div class="row">
	<div class="large-12 columns">
		<ul class="large-block-grid-3">
			<% @categories.each do |category| %>
			<li>
				<h2><%= category.name %></h2>
				<% category.links.each do |link| %>
					<p>
						<strong><%= link.name %></strong><br />
						<%= link.description %><br />
						<%= link_to link.url, link %>
					</p>
				<% end %>
			</li>
			<% end %>
		</ul>
	</div>
</div>